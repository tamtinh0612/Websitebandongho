@model IEnumerable<TTshop.Models.THUONGHIEU>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Quản Lý Thương Hiệu</h2>

<p>
    @Html.ActionLink("Thêm mới thương hiệu", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Mã thương hiệu
        </th>
        <th>
            Tên thương hiệu
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MATH)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TENTH)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.MATH }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.MATH }) |
                @Html.ActionLink("Delete ", "Delete", new { id = item.MATH })
            </td>
        </tr>
    }

</table>

